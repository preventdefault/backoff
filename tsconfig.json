{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "esnext",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitAny": true,
    "downlevelIteration": true,
    "removeComments": true,
    "esModuleInterop": true,
    "resolveJsonModule": false,
    "noEmit": false,
    "declaration": true,
    "strictNullChecks": true,
    "rootDir": ".build",
    "outDir": "./dist",
    "lib": ["ES2020", "DOM"]
  },
  "include": [".build/**/*"],
  "exclude": ["**/*.test.ts", "**/dist/**/*"]
}
